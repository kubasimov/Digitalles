    <Grid>
        <StackPanel Margin="10,146.329,10,106.671">
            <Button Command="{Binding OcrCommand, Mode=OneWay}" Height="60">
                <Button.BorderBrush>
                    <ImageBrush ImageSource="/WPF;component/Icons/rozpoznanie obrazu.png"/>
                </Button.BorderBrush>
                <Button.Background>
                    <ImageBrush ImageSource="/WPF;component/Icons/rozpoznanie obrazu.png"/>
                </Button.Background>
            </Button>
            <Button Command="{Binding RecognizeCommand, Mode=OneWay}" BorderBrush="{x:Null}" Height="60">
                <Button.Background>
                    <ImageBrush ImageSource="/WPF;component/Icons/rozpoznanie hasla.png"/>
                </Button.Background>
            </Button>
            <Button Command="{Binding DictionaryCommand, Mode=OneWay}" BorderBrush="{x:Null}" Height="60">
                <Button.Background>
                    <ImageBrush ImageSource="/WPF;component/Icons/slowinik.png"/>
                </Button.Background>
            </Button>

        </StackPanel>
        <StackPanel Margin="10,359.333,10,25.667" Orientation="Vertical">
            <Button Command="{Binding ExitCommand, Mode=OneWay}" Height="60" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/WPF;component/Icons/wyjscie1.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <Image HorizontalAlignment="Left" Margin="10,32.329,0,0" VerticalAlignment="Top" Source="/WPF;component/Icons/D2.png" Width="256"/>

    </Grid>
</Window>
